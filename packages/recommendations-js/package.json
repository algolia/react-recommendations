{
  "name": "@algolia/recommendations-js",
  "version": "1.0.0-experimental.2",
  "license": "MIT",
  "homepage": "https://github.com/algolia/ui-components",
  "repository": "algolia/ui-components",
  "author": {
    "name": "Algolia, Inc.",
    "url": "https://www.algolia.com"
  },
  "source": "src/index.ts",
  "types": "dist/esm/index.d.ts",
  "module": "dist/esm/index.js",
  "main": "dist/umd/index.js",
  "umd:main": "dist/umd/index.js",
  "unpkg": "dist/umd/index.js",
  "jsdelivr": "dist/umd/index.js",
  "sideEffects": false,
  "files": [
    "dist/"
  ],
  "scripts": {
    "build:clean": "rm -rf ./dist",
    "build:esm": "babel src --root-mode upward --extensions '.ts,.tsx' --out-dir dist/esm --ignore '**/*/__tests__/'",
    "build:umd": "rollup --config",
    "build:types": "tsc -p ./tsconfig.declaration.json --outDir ./dist/esm",
    "build": "yarn build:clean && yarn build:esm && yarn build:umd && yarn build:types",
    "prepare": "yarn build:esm && yarn build:types"
  },
  "peerDependencies": {
    "algoliasearch": "^4.9.1"
  },
  "dependencies": {
    "@algolia/recommendations-core": "1.0.0-experimental.2",
    "@algolia/recommendations-vdom": "1.0.0-experimental.2",
    "preact": "^10.0.0"
  }
}
